# set-bounds 4 1 #
import send :(int -> unit)

private transfer (m:int) :(unit) = {
  if (not (!funds < m))
  then funds := !funds - m;
       send m;
       assert(not(!funds < 0))
  else ()};

public claimBonus (u:unit) :(unit) = {
  if (not (!bonus < 1))
  then bonus := !bonus - 1;
       transfer 10;
       assert(not(!bonus < 0))
  else ()};

int funds := 100;
int bonus := 1;
