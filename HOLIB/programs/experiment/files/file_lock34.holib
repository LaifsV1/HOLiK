# set-bounds 3 4 #
import userExec :((unit -> unit) -> unit)

int lock := 0; 

public openFile (u:unit) :(unit) = {
  if (!lock)
  then ()
  else lock := 1;
       let write = fun (x:unit) :(unit) -> assert(!lock) in
       userExec(write);
       lock := 0};

