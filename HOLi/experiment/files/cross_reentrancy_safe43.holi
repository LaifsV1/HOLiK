# set-bounds 4 3 #
import send :(int -> unit)

private transfer (m:int) :(unit) = {
  if (not (!balance < m))
  then balance := !balance - m;
       send m;
       assert(not(!balance < 0))
  else ()};

public claimBonus (u:unit) :(unit) = {
  if (not (!bonus < 1))
  then bonus := !bonus - 1;
       transfer 10;
       assert(not(!bonus < 0))
  else ()};

int balance := 100;
int bonus := 1;
